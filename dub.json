{
	"name": "perfontain",
	"targetPath": "bin",
	"buildTypes": {
		"debug-no-info": {
			"buildOptions": [
				"debugMode"
			]
		}
	},
	"dependencies": {
		"stb": {"path":"external_libs/stb/stb/"},
		"utile": {"path":"external_libs/utile/utile/"},
		"pegged": ">=0.4.5",
		"derelict-sdl2": ">=3.1.0-alpha.4"
	},
	"subConfigurations": {
		"derelict-sdl2": "derelict-sdl2-static"
	},
	"stringImportPaths": [
		"source/perfontain/shader/res"
	],
	"libs": [
		"sdl_x64",
		"lispsm_x64",
		"nuklear_x64",
		"sdl_ttf_x64",
		"sdl_mixer_x64"
	],
	"dflags": [
		"-preview=in",
		"-preview=intpromote",
		"-preview=shortenedMethods"
	],
	"dflags-ldc": [
		"-ffast-math"
	],
	"libs-linux": [
		"Xi",
		"X11",
		"Xext",
		"asound",
		"stdc++"
	],
	"libs-windows": [
		"gdi32",
		"imm32",
		"ole32",
		"winmm",
		"user32",
		"version",
		"oleaut32",
		"setupapi"
	],
	"lflags-linux": [
		"-s",
		"-Lutils/deps"
	],
	"lflags-windows": [
		"/LIBPATH:utils/deps"
	],
	"lflags-windows-dmd": [
		"/LIBPATH:utils/deps/debug"
	],
	"lflags-windows-ldc": [
		"/LIBPATH:utils/deps/release"
	],
	"buildRequirements": ["silenceWarnings"]
}
